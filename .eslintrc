{
    "extends": "airbnb",
    "env": {
        "browser": true
    },
    "rules": {
        "max-len": 0,
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "never"],
        "jsx-a11y/label-has-for": 0,
        "jsx-a11y/label-has-associated-control": [ "error", {
            "required": {
                "some": [ "nesting", "id"  ]
            }
        }]
    }
}
